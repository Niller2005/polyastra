# Trading Configuration
BET_PERCENT=5.0          # Percent of balance to bet per trade (default 5%)
MIN_EDGE=0.565           # Decision (56.5% dla YES, 43.5% dla NO)
MAX_SPREAD=0.15          # Max spread (15%) - skip if >
WINDOW_DELAY_SEC=15      # Delay entry after event start
MARKETS=BTC,ETH,XRP,SOL  # Markets

# Position Management (checked every 60 seconds)
ENABLE_STOP_LOSS=YES     # Auto exit losing positions
STOP_LOSS_PERCENT=50.0   # Exit if down 50% from entry
ENABLE_TAKE_PROFIT=NO    # Auto exit winning positions  
TAKE_PROFIT_PERCENT=80.0 # Exit if up 80% from entry
ENABLE_REVERSAL=NO       # Reverse position on stop loss

# Position Scaling
ENABLE_SCALE_IN=YES      # Add to winning positions near expiry
SCALE_IN_MIN_PRICE=0.70  # Min price to scale in (70 cents = 70% win probability)
SCALE_IN_MAX_PRICE=0.90  # Max price to scale in (90 cents)
SCALE_IN_TIME_LEFT=120   # Scale in when <= 2 minutes left (120 seconds)
SCALE_IN_MULTIPLIER=1.0  # Add 100% more shares (doubles position)

# Wallet & API Keys
PROXY_PK=0xYOUR_PRIVATE_KEY_HERE    # Polygon wallet private key
FUNDER_PROXY=                       # Polymarket proxy address
# Bot fill automaticaly
API_KEY=
API_SECRET=
API_PASSPHRASE=

# ADX Filter Configuration
ADX=YES
ADX_THRESHOLD=20.0
ADX_INTERVAL=1m
ADX_PERIOD=14

