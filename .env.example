# =============================================================================
# RISK PROFILE PRESETS - Choose one and uncomment the section you want
# =============================================================================

# -----------------------------------------------------------------------------
# CONSERVATIVE (Recommended for beginners or small accounts <$500)
# -----------------------------------------------------------------------------
# BET_PERCENT=3.0
# MIN_EDGE=0.40
# CONTRARIAN_THRESHOLD=0.05
# MAX_SPREAD=0.12
# CONFIDENCE_SCALING_FACTOR=3.0
# MAX_SIZE=100.0
# MAX_SIZE_MODE=CAP
# STOP_LOSS_PRICE=0.40
# SCALE_IN_MULTIPLIER=1.0


# -----------------------------------------------------------------------------
# BALANCED (Default - Good balance of risk/reward for most users)
# -----------------------------------------------------------------------------
BET_PERCENT=5.0
MIN_EDGE=0.35              # Entry confidence >= 35% for Trend Following
CONTRARIAN_THRESHOLD=0.10  # Entry confidence <= 10% for Contrarian plays
MAX_SPREAD=0.15
CONFIDENCE_SCALING_FACTOR=5.0
MAX_SIZE=500.0             # Cap position size at 500 shares (use NONE for no cap)
MAX_SIZE_MODE=CAP          # CAP: Use MIN(based on balance%, MAX_SIZE) | MAXIMIZE: Use MAX(based on balance%, MAX_SIZE)
STOP_LOSS_PRICE=0.30
SCALE_IN_MULTIPLIER=1.5    # Add 150% more on scale-in (2.5x total)

# -----------------------------------------------------------------------------
# AGGRESSIVE (Higher risk/reward - for experienced traders with larger accounts)
# -----------------------------------------------------------------------------
# BET_PERCENT=8.0
# MIN_EDGE=0.32
# CONTRARIAN_THRESHOLD=0.08
# MAX_SPREAD=0.18
# CONFIDENCE_SCALING_FACTOR=7.0
# MAX_SIZE=1000.0
# MAX_SIZE_MODE=CAP
# STOP_LOSS_PRICE=0.20
# SCALE_IN_MULTIPLIER=2.0


# -----------------------------------------------------------------------------
# ULTRA AGGRESSIVE (Maximum risk - only for large accounts and high conviction)
# -----------------------------------------------------------------------------
# BET_PERCENT=12.0
# MIN_EDGE=0.30
# CONTRARIAN_THRESHOLD=0.12
# MAX_SPREAD=0.20
# CONFIDENCE_SCALING_FACTOR=10.0
# MAX_SIZE=2000.0
# MAX_SIZE_MODE=CAP
# STOP_LOSS_PRICE=0.10
# SCALE_IN_MULTIPLIER=2.5


# =============================================================================
# Common Settings (apply to all profiles)
# =============================================================================

WINDOW_DELAY_SEC=12      # Delay entry after event start
MAX_ENTRY_LATENESS_SEC=600 # Skip entry if > 10m late (allows mid-window entry)
WINDOW_START_PRICE_BUFFER_PCT=0.05 # Allowed % deviation from window start price
MARKETS=BTC,ETH,XRP,SOL  # Markets to trade

# Atomic Hedging Configuration
COMBINED_PRICE_THRESHOLD=0.99        # Max combined price for entry+hedge (default: 0.99)
HEDGE_FILL_TIMEOUT_SECONDS=120       # Timeout for both orders to fill (default: 120s)
HEDGE_POLL_INTERVAL_SECONDS=5        # Check fill status every N seconds (default: 5s)

# Pre-Settlement Exit Strategy
ENABLE_PRE_SETTLEMENT_EXIT=YES       # Exit losing side early if confidence > threshold
PRE_SETTLEMENT_MIN_CONFIDENCE=0.80   # Min confidence to trigger early exit (80%)
PRE_SETTLEMENT_EXIT_SECONDS=180      # Start checking at T-180s before resolution
PRE_SETTLEMENT_CHECK_INTERVAL=30     # Check every N seconds (default: 30s)

# Emergency Sell Timing (Time-Aware Liquidation)
EMERGENCY_SELL_ENABLE_PROGRESSIVE=YES # Enable time-aware pricing strategy
EMERGENCY_SELL_WAIT_SHORT=5          # Wait time for aggressive mode (<300s remaining)
EMERGENCY_SELL_WAIT_MEDIUM=8         # Wait time for balanced mode (300-600s)
EMERGENCY_SELL_WAIT_LONG=10          # Wait time for patient mode (>600s)
EMERGENCY_SELL_FALLBACK_PRICE=0.10   # Final fallback price if all else fails
EMERGENCY_SELL_HOLD_IF_WINNING=YES   # Hold small positions if still winning
EMERGENCY_SELL_MIN_PROFIT_CENTS=2    # Min profit in cents to consider "winning"

# Position Scaling (Deprecated - not used with atomic hedging)
ENABLE_SCALE_IN=NO       # Add to winning positions near expiry
SCALE_IN_MIN_PRICE=0.60  # Min price to scale in (60 cents = 60% win probability)
SCALE_IN_MAX_PRICE=0.90  # Max price to scale in (90 cents)
SCALE_IN_TIME_LEFT=450   # Scale in when <= 7.5 minutes left (450 seconds)
SCALE_IN_MULTIPLIER=1.5  # Add 150% more (2.5x total position)

# Wallet & API Keys
PROXY_PK=0xYOUR_PRIVATE_KEY_HERE    # Polygon wallet private key (EOA - needs small POL balance for gas if fallback used)
FUNDER_PROXY=                       # Polymarket proxy address (Safe wallet)
# Bot fill automaticaly
API_KEY=
API_SECRET=
API_PASSPHRASE=

# Polymarket Builder API (for gasless CTF operations)
# Apply at: https://polymarket.com/developers
# IMPORTANT: These are DIFFERENT from trading API credentials above
POLY_BUILDER_API_KEY=               # Builder API key (from Builder Profile)
POLY_BUILDER_SECRET=                # Builder secret (from Builder Profile)
POLY_BUILDER_PASSPHRASE=            # Builder passphrase (from Builder Profile)
ENABLE_RELAYER_CLIENT=YES           # Use gasless relayer (YES) or manual Web3 (NO)
                                    # NOTE: If relayer unavailable, falls back to Web3 (requires POL for gas)

# ADX Filter Configuration
ADX=NO
ADX_INTERVAL=15m
ADX_PERIOD=10

# Enhanced Binance Integration (Price Action Analysis)
ENABLE_MOMENTUM_FILTER=YES    # Use Binance price momentum (velocity, acceleration, RSI)
ENABLE_ORDER_FLOW=YES          # Analyze Binance order flow (buy/sell pressure)
ENABLE_DIVERGENCE=YES          # Detect Polymarket vs Binance price divergence
ENABLE_VWM=YES                 # Volume-weighted momentum indicators
MOMENTUM_LOOKBACK_MINUTES=15   # Minutes to analyze for momentum (default: 15)

# Confidence Calculation Method
BAYESIAN_CONFIDENCE=NO          # Use Bayesian confidence calculation (NO=Additive, YES=Bayesian)
                                # Keep NO initially to collect A/B testing data, then switch if Bayesian performs better

# Legacy External Trend Filter (BFXD)
ENABLE_BFXD=NO                 # Enable external BFXD trend filter (mostly redundant with Binance integration)
BFXD_URL=                      # External BFXD service URL (only used if ENABLE_BFXD=YES)

# External Services
DISCORD_WEBHOOK=

# Production Server Configuration (for sync tools)
PRODUCTION_SSH_HOST=root@your-server-ip
PRODUCTION_REMOTE_PATH=/path/to/polyastra
