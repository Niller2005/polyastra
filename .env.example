# =============================================================================
# Common Settings (apply to all profiles)
# =============================================================================

WINDOW_DELAY_SEC=15      # Delay entry after event start
MARKETS=BTC,ETH,XRP,SOL  # Markets to trade

# Position Management (checked every 60 seconds)
ENABLE_STOP_LOSS=YES     # Auto exit losing positions + smart breakeven protection
ENABLE_REVERSAL=NO       # Reverse position on stop loss

# Position Scaling
ENABLE_SCALE_IN=YES      # Add to winning positions near expiry
SCALE_IN_MIN_PRICE=0.70  # Min price to scale in (70 cents = 70% win probability)
SCALE_IN_MAX_PRICE=0.90  # Max price to scale in (90 cents)
SCALE_IN_TIME_LEFT=120   # Scale in when <= 2 minutes left (120 seconds)

# Exit Plan Configuration
ENABLE_EXIT_PLAN=YES     # Enable aggressive exit plan (sell at target price after position ages)
EXIT_PRICE_TARGET=0.99   # Target price for exit (99 cents for near-guaranteed fill)
EXIT_MIN_POSITION_AGE=300 # Minimum position age in seconds (5 minutes) before exit plan activates
EXIT_CHECK_INTERVAL=60   # Check for exit opportunities every 60 seconds
EXIT_AGGRESSIVE_MODE=NO  # Check more frequently (every 30 seconds instead of 60)

# Wallet & API Keys
PROXY_PK=0xYOUR_PRIVATE_KEY_HERE    # Polygon wallet private key
FUNDER_PROXY=                       # Polymarket proxy address
# Bot fill automaticaly
API_KEY=
API_SECRET=
API_PASSPHRASE=

# ADX Filter Configuration
ADX=YES
ADX_THRESHOLD=20.0
ADX_INTERVAL=1m
ADX_PERIOD=14

# Enhanced Binance Integration (Price Action Analysis)
ENABLE_MOMENTUM_FILTER=YES    # Use Binance price momentum (velocity, acceleration, RSI)
ENABLE_ORDER_FLOW=YES          # Analyze Binance order flow (buy/sell pressure)
ENABLE_DIVERGENCE=YES          # Detect Polymarket vs Binance price divergence
ENABLE_VWM=YES                 # Volume-weighted momentum indicators
MOMENTUM_LOOKBACK_MINUTES=15   # Minutes to analyze for momentum (default: 15)

# Legacy External Trend Filter (BFXD)
ENABLE_BFXD=NO                 # Enable external BFXD trend filter (mostly redundant with Binance integration)
BFXD_URL=                      # External BFXD service URL (only used if ENABLE_BFXD=YES)

# External Services
DISCORD_WEBHOOK=

# =============================================================================
# Database Configuration
# =============================================================================

# Database Backend - Choose one of three modes:
# 1. Local SQLite (default): USE_TURSO=NO, USE_EMBEDDED_REPLICA=NO
# 2. Turso (remote): USE_TURSO=YES, USE_EMBEDDED_REPLICA=NO
# 3. Embedded Replica (local synced with Turso - RECOMMENDED for local dev): USE_TURSO=NO, USE_EMBEDDED_REPLICA=YES

USE_TURSO=NO                # Set to YES to use remote Turso database
TURSO_DATABASE_URL=         # Turso database URL (e.g., libsql://your-db.turso.io)
TURSO_AUTH_TOKEN=           # Turso authentication token

# Embedded Replica Configuration (RECOMMENDED for local dev with Turso sync)
# Embedded replicas give you:
# - Fast local reads (microsecond latency)
# - Automatic sync with remote Turso database
# - Read-your-writes guarantee
# - Works offline (local-first)
USE_EMBEDDED_REPLICA=NO             # Set to YES to use embedded replica (local file synced with Turso)
EMBEDDED_REPLICA_FILE=trades_replica.db  # Local replica file path (relative to project root)
